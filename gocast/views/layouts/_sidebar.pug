-
  var menu1 = [
    {text: "Home", icon: "icon-home", href: "./index.html"},
    {text: "Trending", icon: "icon-chart"},
    {text: "Explore Topics", icon: "icon-cube"},
    {text: "Playlist", icon: "icon-play", href: "./playlist.html"},
    {text: "Subscriptions", icon: "icon-subscriptions"}
  ];
  var menu2 = [
    {text: "Dashboard", icon: "icon-discovery"},
    {text: "Episodes", icon: "icon-microphone2"},
    {text: "Team", icon: "icon-3user"},
    {text: "Subscribers", icon: "icon-add-user"}
  ];
  var menu3 = [
    {text: "Leaderboard", icon: "icon-medal-star"},
  ];

aside.sidebar
  a.logo(href="/")
    include ../icons/_logo
  ul.menu
    each item in menu1
      +menuItem(item.text, item.icon, item.href)
  ul.menu
    h3.menu-heading Podcasters
    each item in menu2
      +menuItem(item.text, item.icon, item.href)
  ul.menu
